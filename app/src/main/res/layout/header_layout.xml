<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/green"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawerLayout_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:src="@drawable/account"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:id="@+id/drawerLayout_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawerLayout_image"
        android:layout_alignStart="@id/drawerLayout_image"
        android:layout_alignLeft="@id/drawerLayout_image"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/baloo"
        android:text="123@xyz"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>

</RelativeLayout>